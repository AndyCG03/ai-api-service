# ======================
# API Configuration
# ======================
ENVIRONMENT=development
API_VERSION=v1
DEBUG=True

# ======================
# Security
# ======================
API_KEYS=demo_key_1,demo_key_2
SECRET_KEY=change-me-in-production

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_PER_MINUTE=10
MAX_CONCURRENT_REQUESTS=5

# ======================
# Models Base Path
# ======================
MODELS_PATH=./data/models

# ======================
# Feature Flags
# ======================
ENABLE_LLM=True
ENABLE_WHISPER=True
ENABLE_EMBEDDINGS=True
ENABLE_OCR=False

# ======================
# LLM Settings (GGUF / llama.cpp)
# ======================
LLM_MODEL_NAME=gemma-3-1b-it-Q4_K_M.gguf
LLM_MODEL_PATH=./data/models/gemma-3-1b-it-Q4_K_M.gguf  # Opcional
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.7

# ======================
# Whisper Settings
# ======================
WHISPER_MODEL_SIZE=custom
WHISPER_MODEL_NAME=tiny.pt
WHISPER_MODEL_PATH=./data/models/tiny.pt  # Opcional
WHISPER_LANGUAGE=es

# ======================
# Embeddings (Sentence Transformers)
# ======================
EMBEDDING_MODEL_NAME=all-MiniLM-L12-v2
EMBEDDING_MODEL_PATH=./data/models/All-miniL12-v2  # Opcional

# ======================
# OCR Models (EasyOCR / PaddleOCR / custom)
# ======================
OCR_DETECTOR_PATH_ENV=./data/models/OCR/craft_mlt_25k.pth
OCR_RECOGNIZER_PATH_ENV=./data/models/OCR/english_g2.pth
OCR_LANGUAGE_PATH_ENV=./data/models/OCR/latin.pth  # Note: LANGUAGE_PATH, no LANGUAGE_MODEL_PATH

# ======================
# Server
# ======================
HOST=0.0.0.0
PORT=8000
WORKERS=1